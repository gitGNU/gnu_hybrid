include @reldir@/Makefile.cfg

EXTRA_DIST +=					\
	@reldir@/Makefile.inc.in		\
	@reldir@/autoconfig-tweaks.h		\
	@reldir@/config.h

BUILT_SOURCES +=				\
	@reldir@/userconfig.h

#
# NOTE:
#     The following rule must not depend on Makefile (it should be run one
#     time only ...
$(USERCONFIG):
	cp $(top_srcdir)/src/archs/$(architecture)/bsp/configs/default.usr $(USERCONFIG) || exit 1

@reldir@/rules.all: Makefile $(CFG_FILES) $(RULES2SYMS)
	$(RULES2SYMS) $(RULES2SYMS_FLAGS) -o @reldir@/rules.all -- $(CFG_FILES) || { rm -f @reldir@/rules.all ; exit 1 ; }
CLEANFILES += @reldir@/rules.all

@reldir@/rules.out: Makefile @reldir@/rules.all $(USERCONFIG) $(MERGESYMS)
	$(MERGESYMS) $(MERGESYMS_FLAGS) -i @reldir@/rules.all -j $(USERCONFIG) -o @reldir@/rules.out || { rm -f @reldir@/rules.out ; exit 1 ; }
CLEANFILES += @reldir@/rules.out

@reldir@/userconfig.h: Makefile @reldir@/rules.out $(SH2H)
	$(SH2H) $(SH2H_FLAGS) -g USERCONFIG_H -p CONFIG_ -i @reldir@/rules.out -o @reldir@/userconfig.h || { rm -f @reldir@/userconfig.h ; exit 1 ; }
CLEANFILES += @reldir@/userconfig.h

# This file has been generated by configure (or modified by the user so
# distclean target must remove it ...
DISTCLEANFILES +=				\
	$(USERCONFIG)
