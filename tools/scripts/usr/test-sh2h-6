TEST_FILENAME_IN=./test-in.txt
TEST_FILENAME_OUT=./test-out.txt
TEST_FILENAME_EXP=./test-exp.txt

SH2H="./sh2h"

rm -f $TEST_FILENAME_IN
rm -f $TEST_FILENAME_OUT
rm -f $TEST_FILENAME_EXP

cat << EOF > $TEST_FILENAME_IN
#
# Automatically generated make config, don't edit
#

#
# Intel ia-32 architecture
#
DEBUGGER        y
ARCH_DEBUG      n
VMA             0xC0000000
HZ              100
_dsadas#DsdsaSDACQW@# !FECDCASE#@
EOF

cat << EOF > $TEST_FILENAME_EXP
/*
 * This file has been generated by sh2h. DO NOT EDIT
 */

#ifndef GUARD
#define GUARD

#define PREFIX_DEBUGGER   1
#define PREFIX_ARCH_DEBUG 0
#define PREFIX_VMA        0xC0000000
#define PREFIX_HZ         100

#endif /* GUARD */

/* 3 definitions processed */
EOF

$SH2H -o $TEST_FILENAME_OUT			\
    -i $TEST_FILENAME_IN			\
    -p PREFIX_					\
    -g GUARD					\
    || exit 1

diff $TEST_FILENAME_OUT $TEST_FILENAME_EXP > /dev/null 2>&1 || exit 1

rm -f $TEST_FILENAME_IN
rm -f $TEST_FILENAME_OUT
rm -f $TEST_FILENAME_EXP

exit 0
